{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "declaration": true,
    "lib": ["es2022", "dom"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": ["src/**/*"]
}
